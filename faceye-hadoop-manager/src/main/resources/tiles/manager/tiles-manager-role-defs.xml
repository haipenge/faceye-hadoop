    <!-- Role 管理 首页(列表页) -->
	<definition name="security.role.manager" extends="default.manager">
	    <put-attribute name="default-center" value="security.role.center"></put-attribute>
	</definition>
	<definition name="security.role.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/security/role/role_center.jsp"></put-attribute>
	</definition>
	
	<!-- Role 新增,编辑页面 -->
	<definition name="security.role.update" extends="default.manager">
