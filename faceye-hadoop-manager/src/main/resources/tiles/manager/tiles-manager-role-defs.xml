	<definition name="security.role.update.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/security/role/role_update.jsp"></put-attribute>
	</definition>
	
	<!-- @entiyt.name@ 明细页 -->
	<definition name="security.role.detail" extends="default.manager">
	    <put-attribute name="default-center" value="security.role.detail.center"></put-attribute>
	</definition>
	<definition name="security.role.detail.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/security/role/role_detail.jsp"></put-attribute>
	</definition>
	
	<!-- Auth resource 2 Role -->
	<definition name="security.role.auth" extends="default.manager">
	    <put-attribute name="default-center" value="security.role.auth.center"></put-attribute>
	</definition>
	<definition name="security.role.auth.center" extends="default.center">
